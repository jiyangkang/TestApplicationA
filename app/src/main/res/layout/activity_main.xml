<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".MainActivity">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:background="@drawable/bg_result"
        android:gravity="end"
        android:padding="8dp"
        android:layout_marginTop="32dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mc"
        android:layout_marginTop="24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:text="MC"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/m_plus"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/result" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="M+"
        app:layout_constraintBottom_toBottomOf="@id/mc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/m_sub"
        app:layout_constraintStart_toEndOf="@id/mc"
        app:layout_constraintTop_toTopOf="@id/mc" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/m_sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="MC"
        app:layout_constraintBottom_toBottomOf="@id/mc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/mr"
        app:layout_constraintStart_toEndOf="@id/m_plus"
        app:layout_constraintTop_toTopOf="@id/mc" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="MC"
        app:layout_constraintBottom_toBottomOf="@id/mc"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/m_sub"
        app:layout_constraintTop_toTopOf="@id/mc" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/c"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="C"
        android:textColor="#0000dd"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/div"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/mc" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="#0000dd"
        android:textStyle="bold"
        android:text="รท"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/c"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/fois"
        app:layout_constraintStart_toEndOf="@id/c"
        app:layout_constraintTop_toTopOf="@id/c" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fois"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="#0000dd"
        android:textStyle="bold"
        android:text="ร"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@id/c"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/back_word"
        app:layout_constraintStart_toEndOf="@id/div"
        app:layout_constraintTop_toTopOf="@id/c" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/back_word"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="#0000dd"
        android:textStyle="bold"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="@id/c"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/fois"
        app:layout_constraintTop_toTopOf="@id/c" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/seven"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="7"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/eight"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/c" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/eight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@id/seven"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/nine"
        app:layout_constraintStart_toEndOf="@id/seven"
        app:layout_constraintTop_toTopOf="@id/seven" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/seven"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/sub"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintTop_toTopOf="@id/seven" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="#0000dd"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@id/seven"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/nine"
        app:layout_constraintTop_toTopOf="@id/seven" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/four"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="4"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/five"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/seven" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@id/four"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/six"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintTop_toTopOf="@id/four" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/four"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/plus"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintTop_toTopOf="@id/four" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="#0000dd"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@id/four"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/six"
        app:layout_constraintTop_toTopOf="@id/four" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/one"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/two"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/four" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/one"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/three"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toTopOf="@id/one" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/one"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/equal"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toTopOf="@id/one" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textColor="#0000dd"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="@id/mod"
        app:layout_constraintEnd_toEndOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/six"
        app:layout_constraintTop_toTopOf="@id/one" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mod"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="%"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintStart_toStartOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/one" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@id/mod"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/point"
        app:layout_constraintStart_toEndOf="@id/mod"
        app:layout_constraintTop_toTopOf="@id/mod" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:textStyle="bold"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/mod"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/equal"
        app:layout_constraintStart_toEndOf="@id/zero"
        app:layout_constraintTop_toTopOf="@id/mod" />


</androidx.constraintlayout.widget.ConstraintLayout>